
<div>
    <h3>Add New Item</h3>
    <hr />
    <form action="ProccessAddItem" method="post" class="justify-content-center">
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="ItemId">Item Id</label>
                <input type="text" id="ItemId" name="item_id" class="form-control" required />
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="ItemName">Item Name</label>
                <input type="text" id="ItemName" name="item_name" class="form-control" required />
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="ItemPrice">Item price</label>
                <input type="text" id="ItemPrice" name="price" class="form-control" required />
            </div>
        </div>
        
        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="MenuType">Menu Type</label>
                <section id="MenuType">
                   
                    
                    

                </section>
            </div>
        </div>
        
        
        
        

        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="ItemDescription">Item Description</label>
                <textarea  rows="15" cols="15" id="ItemDescription" name="descript" class="form-control" required />
            </div>
        </div>
        
        
        <div class="d-flex mx-4 mb-3 mb-lg-4">
            <button type="submit" class="btn btn-primary btn-lg">Add Item</button>
        </div>
        
    </form>



</div>