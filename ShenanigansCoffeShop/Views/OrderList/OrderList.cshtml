@model ShenanigansCoffeShop.ViewModel.OrderListViewModel
<br />
<br />
<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <div class="container">
                                @if (Session["CurrentOrderObj"] != null)
                                {
                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style=" font-family: Lucida Handwriting;">Would like to Checkout?</p>
                                    <h2>Order No: @(((ShenanigansCoffeShop.Models.TotalOrderModel)Session["CurrentOrderObj"]).o_num)</h2>
                                    <hr/>

                                    foreach (ShenanigansCoffeShop.Models.OrderListModel order in Model.Orders)
                                    {
                                        for (int i = 0; i < order.num_of_orders; i++)
                                        {
                                            <div class="row py-3 px-lg-5">
                                                <div class="col py-3 px-lg-5">@order.item_id</div>
                                                <div class="col py-3 px-lg-5">@order.item_name</div>
                                                <div class="col py-3 px-lg-5">@order.price₪</div>
                                            </div>
                                        }
                                    }
                                    <div>Total Price: @(((ShenanigansCoffeShop.Models.TotalOrderModel)Session["CurrentOrderObj"]).totalprice)₪</div>
                                }
                                else
                                {
                                    <h2>Nothing was Ordered</h2>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}