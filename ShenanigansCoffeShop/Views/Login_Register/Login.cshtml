@model ShenanigansCoffeShop.Models.UserModel


<form asp-action="ProcessLogin">
    <h4>Welcome Guest,<br/> Please Login</h4>
    <hr/>
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="" for="Email_Add">Email address</label>
        <input type="email" class="form-control" id="Email_Add" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" placeholder="Password">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="rememberCheckBox">
        <label class="form-check-label" for="rememberCheckBox">Remember me?</label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <div>
        @Html.ActionLink("Not Registered?", "Register", "Login_Register")
    </div>
</form>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
