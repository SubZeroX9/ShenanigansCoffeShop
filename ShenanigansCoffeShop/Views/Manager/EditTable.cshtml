@model ShenanigansCoffeShop.Models.CTableModel
<br />
<br />
<br />
<section class="center" style="background-color: whitesmoke; vertical-align:middle;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="background-color: whitesmoke; margin-left: 100px;">
            <br /><h4 style="font-weight: bold; color: black; text-align: center; font-family: Lucida Handwriting;">Item Management </h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.t_num)
            <br /><div class="form-group" style="color:black;">
                @Html.LabelFor(model => model.s_num, "Number of seats", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.s_num ,new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.s_num, "", new { @class = "text-danger" })             
                </div>
            </div>

            <br /><div class="form-group" style="color:black;">
                @Html.LabelFor(model => model.t_type, "Table type", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select name="tableType" id="tableType">
                        <option value="IN">Inside</option>
                        <option value="OUT">Outside</option>
                    </select>
                </div>
            </div>
            <br /><div class="form-group" style="color:black;">
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.availability)
                        @Html.ValidationMessageFor(model => model.availability, "", new { @class = "text-danger" })
                        @Html.LabelFor(model => model.availability, "Availability", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br /><br /><input type="submit" value="Save Changes" class="btn btn-outline-dark" />

                </div>
            </div>
        </div>
        <br /><br />
    }
</section>
